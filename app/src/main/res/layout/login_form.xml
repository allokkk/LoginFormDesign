<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:background="@drawable/sign_in_card_bg"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingStart="30dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_login"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        />

    <TextView
        android:text="Username *"
        android:id="@+id/tv_username"
        android:layout_below="@id/tv_login"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:drawableEnd="@drawable/ic_person_black_24dp"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:background="@drawable/email_et_bg"
        android:alpha="0.3"
        android:layout_below="@id/tv_username"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_height="40dp" />

    <TextView
        android:text="Password *"
        android:id="@+id/tv_password"
        android:layout_below="@id/et_username"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_vpn_key_black_24dp"
        android:drawableEnd="@drawable/ic_vpn_key_black_24dp"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:background="@drawable/email_et_bg"
        android:alpha="0.3"
        android:layout_below="@id/tv_password"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_height="40dp" />

    <CheckBox
        android:id="@+id/rem_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginTop="20dp"
        android:text="Remember Password"
        android:textColor="@color/white"
        android:textColorLink="@color/white" />

</RelativeLayout>